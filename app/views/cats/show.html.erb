<h1>Welcome to <%= @cats.name %>'s Page</h1>
<table>
    <thead>
        <tr>
            <th colspan="2"><%= @cats.name %>'s specifications</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td><%= @cats.name %></td>
        </tr>
        <tr>
            <td>Age (years)</td>
            <td><%= @cats.age %> </td>
        </tr>
        <tr>
            <td>Color</td>
            <td><%= @cats.color %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= @cats.sex %></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><%= @cats.description %></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"><%= link_to "Cats Index", cats_url %></td>
        </tr>
    </tfoot>
</table>
